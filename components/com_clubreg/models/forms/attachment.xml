<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="memberAttachment"	addfieldpath="/administrator/components/com_clubreg/models/fields">			
		<field name="attachment" type="file" label="COM_CLUBREG_PROFILE_ATTACHMENT" description="COM_CLUBREG_PROFILE_ATTACHMENT_DESC"
			class="inputbox input-xlarge"  />
		<field name="document_type" type="configcontrol" label="COM_CLUBREG_PROFILE_ATTACHMENT_TYPE" description="COM_CLUBREG_PROFILE_ATTACHMENT_TYPE_DESC" 
			class="inputbox input-xlarge" default="profile_pics"  configwhich = "club_documents" />
		<field name="notes" type="textarea"
			label="COM_CLUBREG_PROFILE_NOTES" description="COM_CLUBREG_PROFILE_NOTES_DESC"
			class="inputbox input-xlarge" rows="3" cols="80"  />
	</fieldset>
	
	<fieldset name="hiddenControls"	>			
		<field name="attachment_id" type="hidden" default="0" readonly="true" class="readonly" label="PK" description ="PK"/>
		<field name="member_key" type="hidden" default="0" readonly="true" class="readonly" label="Member key" description ="Member key"/>
		<field name="attachment_type" type="hidden" default="" readonly="true" class="readonly" label="Note type" description ="Note type"/>	
	</fieldset>
	
</form>